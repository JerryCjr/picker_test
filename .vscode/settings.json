{
  "files.associations": {
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript"
  },
  "emmet.includeLanguages": {
    "wxml": "html"
  },
  // * json 格式化
  "[json]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  // * jsonc 格式化
  "[jsonc]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  // * javascript 格式化
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // * ts 格式化
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // * less 格式化
  "[less]": {
    "editor.defaultFormatter": "MikeBovenlander.formate"
  },
  // * markdown 格式化
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  // * vue 格式化
  "[vue]": {
    "editor.defaultFormatter": "octref.vetur"
  },
  // * 小程序 格式化语言类型
  "minapp-vscode.wxmlFormatter": "prettyHtml",
  // * 小程序 格式化配置
  "minapp-vscode.prettyHtml": {
    "useTabs": false,
    "tabWidth": 2,
    "printWidth": 100,
    "singleQuote": false, // 默认用双引号
    "usePrettier": false, // 不适用prettier配置
    "wrapAttributes": true, // 属性换行
    "sortAttributes": true // 属性排序
  }
}
